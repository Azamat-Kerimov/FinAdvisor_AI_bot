[Unit]
Description=FinAdvisor API (FastAPI + React)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/FinAdvisor_AI_bot
# Полный путь к Python в venv — иначе systemd не найдёт python
ExecStart=/root/FinAdvisor_AI_bot/venv/bin/python3 -m uvicorn api:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
EnvironmentFile=/root/FinAdvisor_AI_bot/.env

[Install]
WantedBy=multi-user.target
