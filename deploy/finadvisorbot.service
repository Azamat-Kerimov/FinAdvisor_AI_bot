[Unit]
Description=FinAdvisor Telegram Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/FinAdvisor_AI_bot
ExecStart=/root/FinAdvisor_AI_bot/venv/bin/python bot.py
Restart=always
RestartSec=5
EnvironmentFile=/root/FinAdvisor_AI_bot/.env

[Install]
WantedBy=multi-user.target
