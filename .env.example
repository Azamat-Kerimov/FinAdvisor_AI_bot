GIGACHAT_SCOPE=https://ngw.devices.sberbank.ru/sb/public/oauth
GIGACHAT_AUTH_URL=https://ngw.devices.sberbank.ru/sb/public/oauth
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_MODEL=GigaChat:2.0.28.2
